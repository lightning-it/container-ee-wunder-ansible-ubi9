{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":semanticCommitType(chore)",
    ":semanticCommitScope(deps)"
  ],
  "labels": [
    "dependencies"
  ],
  "prConcurrentLimit": 5,
  "rebaseWhen": "conflicted",
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^Dockerfile$/",
        "/^Containerfile$/"
      ],
      "matchStrings": [
        "ARG\\s+ANSIBLE_CORE_VERSION=(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)\\s*\\n"
      ],
      "depNameTemplate": "ansible-core",
      "datasourceTemplate": "pypi",
      "versioningTemplate": "pep440"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^collections/requirements-public\\.yml$/",
        "/^collections/requirements-certified\\.yml$/",
        "/^collections/controller-requirements\\.yml$/"
      ],
      "matchStrings": [
        "-\\s+name:\\s+(?<depName>[A-Za-z0-9_]+\\.[A-Za-z0-9_]+)\\s*\\n\\s+version:\\s+\"?(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)\"?\\s*\\n"
      ],
      "datasourceTemplate": "galaxy-collection",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^collections/requirements-public\\.yml$/",
        "/^collections/requirements-certified\\.yml$/"
      ],
      "matchStrings": [
        "-\\s+name:\\s+https://github\\.com/(?<depName>[A-Za-z0-9_.-]+/[A-Za-z0-9_.-]+)\\.git\\s*\\n\\s+type:\\s+git\\s*\\n\\s+version:\\s+\"?(?<currentValue>[^\"\\n]+)\"?"
      ],
      "datasourceTemplate": "github-tags",
      "versioningTemplate": "loose"
    }
  ],
  "packageRules": [
    {
      "matchDepNames": [
        "ansible-core"
      ],
      "allowedVersions": "/^2\\.18\\./",
      "groupName": "ansible-core (2.18.x)"
    },
    {
      "description": "Pin community.vmware to 5.10.0 for ansible-core 2.18.13 compatibility",
      "matchDepNames": [
        "community.vmware"
      ],
      "matchDatasources": [
        "galaxy-collection"
      ],
      "allowedVersions": "/^5\\.10\\.0$/"
    },
    {
      "matchDatasources": [
        "galaxy-collection"
      ],
      "groupName": "ansible galaxy collections",
      "separateMinorPatch": true
    }
  ]
}
